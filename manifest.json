{
  "manifest_version": 2,
  "name": "scihubify",
  "version": "2.2",

  "description": "Open Links on Sci-Hub, search for selected text on Sci-Hub.",

  "icons":
  {
    "48": "icon48.png",
    "96": "icon96.png",
    "145": "icon145.png"
  },

  "permissions":
  [
    "activeTab",
    "contextMenus",
    "storage"
  ],

  "background":
  {
    "scripts":
    [
      "index.js"
    ]
  },

  "browser_action":
  {
    "default_icon":
    {
      "48": "icon48.png",
      "96": "icon96.png",
      "145": "icon145.png"
    },
    "default_title": "scihubify",
    "default_popup": "popup.html"
  }
}
