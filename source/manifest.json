{
  "manifest_version":   2,
  "name":               "scihubify",
  "version":            "2.6",
  "description":        "Open Links or search for selected text on Sci-Hub.",

  "icons":
  {
    "48":               "assets/icon48.png",
    "96":               "assets/icon96.png",
    "145":              "assets/icon145.png"
  },

  "permissions":
  [
    "activeTab",
    "contextMenus",
    "storage"
  ],

  "background":
  {
    "scripts":
    [
      "index.js"
    ]
  },

  "browser_action":
  {
    "default_icon":
    {
      "48":             "assets/icon48.png",
      "96":             "assets/icon96.png",
      "145":            "assets/icon145.png"
    },
    "default_title":    "scihubify",
    "default_popup":    "popup.html"
  }
}
